{
	"schemaVersion": 1,
	"id": "simple-overhand-swap",
	"version": "${version}",
	"name": "Simple Overhand Swap",
	"description": "Disables the hand-swap functionality outside the inventory to prevent accidental item swaps during gameplay!",
	"authors": [
		"Neyrobyte"
	],
	"contact": {
		"sources": "https://github.com/Neyrobyte/Simple-overhand-swap"
	},
	"license": "MIT",
	"icon": "assets/simple-overhand-swap/icon.png",
    "environment": "client",
	"entrypoints": {
		"client": [
			"nrb.overhandswap.SimpleOverhandSwapClient"
		]
	},
	"mixins": [
		"simple-overhand-swap.client.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.17.2",
		"minecraft": ">=1.21",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}